[include]
	path = ~/.config/git/local
[push]
	default = simple
[alias]
	st = status -unormal
	b = branch
	tb = symbolic-ref --short HEAD
	co = commit
	fa = fetch --all --prune
	sw = switch
	sc = switch -c
	d = diff
	dw = diff --word-diff
	dn = diff --name-only
	sp = stash pop
	ss = stash save
	gr = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
	identity = "! git config user.name \"$(git config user.$1.name)\"; git config user.email \"$(git config user.$1.email)\"; git config user.signingkey \"$(git config user.$1.signingkey)\"; git config hub.host \"$(git config user.$1.host)\"; :"
	copr = "! gh pr list | sk | awk '{ print $1 }' | xargs gh pr checkout"
[github]
	user = Warashi
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[credential]
	helper = osxkeychain
[hub]
	protocol = https
[user]
	useConfigOnly = true
[commit]
	gpgsign = true
[pull]
	ff = only
[init]
	defaultBranch = main
[diff]
	algorithm = histogram
[fetch]
	prune = true
[merge]
	ff = false
	conflictStyle = diff3
