    },
    {
      "description": "Change caps_lock to backspace if pressed with other keys, to escape if pressed alone.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "delete_or_backspace"
            }
          ]
        }
      ]
    },
    {
      "description": "Ctrl-H to Backspace in Jetbrains IDE",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": [
