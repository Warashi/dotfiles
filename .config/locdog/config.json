{
    "default_interval": "5s",
    "default_threshold": "300s",
    "default_timeout": "1s",
    "default_alert_cmd": [
        "echo"
    ],
    "targets": [
        {
            "name": "org-clock-in",
            "alert_cmd": [
                "terminal-notifier",
                "-title",
                "LocDog",
                "-sound",
                "default",
                "-message",
                "you shoud org-clock-in"
            ],
            "watch_cmd": [
                "bash",
                "-c",
                "test \"$(emacsclient -e '(org-clock-is-active)')\" != nil"
            ]
        },
        {
            "name": "emacs-uptime",
            "alert_cmd": [
                "terminal-notifier",
                "-title",
                "LocDog",
                "-sound",
                "default",
                "-message",
                "emacsを再起動しましょう！"
            ],
            "watch_cmd": [
                "bash",
                "-c",
                "test \"$(emacsclient -e '(string-to-number (emacs-uptime \"%s\"))')\" -lt 86400"
            ]
        }
    ]
}
